# Yor task is to write function factorial.

def factorial(n):
    if n == 0:
        return 1
    n = n * factorial(n-1)
    return n
    
    
    
    
print(factorial(0)) # 1
print(factorial(1)) # 1
print(factorial(2)) # 2
print(factorial(3)) # 6
print(factorial(4)) # 24
print(factorial(5)) # 120
print(factorial(6)) # 720
print(factorial(7)) # 5040 
